{
  "name": "middy-zod-validator",
  "version": "2.0.0",
  "description": "Middleware to use zod validations with the middy middleware library",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "prepare": "yarn build",
    "version": "git add -A src",
    "postversion": "git push && git push --tags",
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "clean": "rimraf ./lib",
    "deploy": "npm version patch && npm publish"
  },
  "keywords": [
    "middy",
    "zod",
    "zod-validator",
    "validator",
    "serverless",
    "aws"
  ],
  "author": "Luis Chodiman",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/lechodiman/middy-zod-validator"
  },
  "bugs": {
    "url": "https://github.com/lechodiman/middy-zod-validator/issues"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.92",
    "@types/http-errors": "^1.8.2",
    "@types/jest": "^27.4.0",
    "jest": "^27.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@middy/core": "^2.5.7",
    "http-errors": "^2.0.0",
    "zod": "^3.11.6"
  }
}
